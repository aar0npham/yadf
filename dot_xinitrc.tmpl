#     kde               ) exec startplasma-x11;;
#     xfce|xfce4        ) exec startxfce4;;
#     awesome           ) exec awesome;;
#     xmonad            ) exec xmonad;;
#     *                 ) exec $1;;
# esac
{{- end }}
{{- end }}

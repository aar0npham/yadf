{
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "languageserver": {
    "golang": {
      "command": "$HOME/go/bin/gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        }
  },
  "yaml.schemas": {
      "kubernetes": "/*.yml"
    }
}

